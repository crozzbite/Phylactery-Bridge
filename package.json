{
  "name": "phylactery-bridge-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start:backend": "cd backend && bun run start:dev",
    "start:frontend": "cd frontend && bun start",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "install:all": "bun install && cd backend && bun install && cd ../frontend && bun install",
    "test:backend": "cd backend && bun run test",
    "test:frontend": "cd frontend && bun run test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}